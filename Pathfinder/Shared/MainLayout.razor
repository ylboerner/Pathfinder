@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Filled.Fireplace" Color="Color.Inherit" Target="_blank"/>
        <MudText Typo="Typo.body1">PathFhinder</MudText>
        <MudSpacer/>
        <MudText Typo="Typo.body1">Powered by the Firely .NET SDK</MudText>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/ylboerner/firely-net-sdk" Target="_blank"/>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="my-0 pt-0">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}